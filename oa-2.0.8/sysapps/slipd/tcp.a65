	tax

	ldy #TCB_TRIES
	lda (tcbp),y
	clc
	adc #1
	cmp #10		; retransmit 6 times only ?
	bcs error

	pha
	jsr incownr
	jsr queueslot
	pla
	bcs endeini

	ldy #TCB_TRIES
	sta (tcbp),y
