	sec
	rts
piok
	ldy #0
	lda (pp),y
	cmp #<TCP_DOFFSET
	bne move
	iny
	lda (pp),y
	cmp #>TCP_DOFFSET
	beq ok

move	DB("TCP offset wrong!^m^j")
#ifdef DEBUGTCP
	lda pslot:jsr EHexout:lda #"-":jsr ECout
	lda pp+1: jsr EHexout: lda pp: jsr EHexout: lda #":": jsr ECout
	ldy #0: xx lda (pp),y: jsr EHexout: iny: cpy #10: bcc xx
	jsr ECrlfout
#endif
qdisc
	ldx pslot
	lda #<-1
	sta pslot
	jsr bfree

	lda #<-1
	sec
	rts

ok
	iny
	lda (pp),y
	sta dlen	; len
	iny
	lda (pp),y
	sta dlen+1

	jsr setout
	jsr setseq
	jsr setack

	lda dlen
	ldx dlen+1
	jsr addtxnxt		; inc seq number

        jsr preptcp
        jsr tcp2ip
        bcs qdisc

        jsr prepip
&do_requeue
	jsr do_queue		; does an incownr
	bcs notqueued

	ldx pslot
	lda #<-1
	sta pslot
	jsr queueslot
	lda #0
	clc
	rts

notqueued
	ldx pslot		; we are not expected to keep a reference here
	jsr bfree

	lda #0
	sec
	rts
